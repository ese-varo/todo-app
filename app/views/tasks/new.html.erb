
<div class="container">
<h2 align="center">Create a task</h2>
  <div class='row'>
    <div class='col col-10 offset-1'>
      <%= form_with model: @task do |f| %>
        <div class="form-group">
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :title %>
          </div>
          <div class="col">
            <%= f.text_field :title, class: "form-control",
                             placeholder: "Title of task", autofocus: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :content%>
          </div>
          <div class="col">
            <%= f.text_area :content, class: "form-control",
                             placeholder: "Description" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-md-auto">
            <a href="#" class="btn btn-outline-secondary btn-sm">Add a new task</a>
          </div>
        </div>

        <div class="form-group">
          <div class="row justify-content-end">
            <div class="col-2 control-label">
              <%= f.submit class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>

      <div align="center">
        [ <%= link_to "Cancel request and return to list listing",
                      users_index_path %> ]
      </div>
    </div>
  </div>
</div>
